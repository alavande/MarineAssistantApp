<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <Button android:id="@+id/button_1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Weather"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:id="@+id/weatherpic"
        android:layout_width="186dp"
        android:layout_height="166dp"
        android:src="@drawable/cloud"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/button_1"
        android:layout_toLeftOf="@+id/weatherInfo"
        android:layout_toStartOf="@+id/weatherInfo" />
    <TextView
        android:id="@+id/weatherInfo"
        android:layout_width="178dp"
        android:layout_height="163dp"
        android:text="Max \n  Min "
        android:textSize="24sp"
        android:gravity="center"
        android:layout_alignTop="@+id/weatherpic"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/windspeed"
        android:layout_width="192dp"
        android:layout_height="79dp"
        android:text="windspeed"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_below="@+id/weatherInfo"
        android:layout_toLeftOf="@+id/weatherInfo"
        android:layout_toStartOf="@+id/weatherInfo" />
    <TextView
        android:id="@+id/windspeedInfo"
        android:layout_width="192dp"
        android:layout_height="70dp"
        android:text="3m/s"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/windspeed"
        android:layout_below="@+id/weatherInfo"
        android:layout_toRightOf="@+id/weatherpic"
        android:layout_toEndOf="@+id/weatherpic" />




    <TextView
        android:id="@+id/tideInfo"
        android:layout_width="367dp"
        android:layout_height="52dp"
        android:gravity="center"
        android:text="tide Info"
        android:textSize="24sp"
        android:layout_below="@+id/windspeed"
        android:layout_alignLeft="@+id/windspeed"
        android:layout_alignStart="@+id/windspeed"
        android:layout_marginTop="17dp" />
    <TextView
        android:id="@+id/tide"
        android:layout_width="362dp"
        android:layout_height="77dp"
        android:gravity="center"
        android:text="tide info display here"
        android:textSize="20sp"
        android:layout_below="@+id/tideInfo"
        android:layout_alignRight="@+id/tideInfo"
        android:layout_alignEnd="@+id/tideInfo"
        android:layout_alignParentBottom="true" />

</RelativeLayout>