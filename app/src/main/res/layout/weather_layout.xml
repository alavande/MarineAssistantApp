<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1">

    <ImageView
        android:id="@+id/weatherpic"
        android:layout_width="186dp"
        android:layout_height="166dp"
        android:tint="#F4F6F7"
        android:src="@drawable/clouds"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/weatherInfo"
        android:textColor="#F4F6F7"
        android:layout_width="186dp"
        android:layout_height="163dp"
        android:text="another"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/weatherpic"
        android:layout_above="@+id/windspeedInfo"
        android:layout_toRightOf="@+id/weatherpic" />

    <TextView
        android:id="@+id/windspeed"
        android:layout_width="155dp"
        android:layout_height="79dp"
        android:textColor="#F4F6F7"
        android:text="windspeed"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_below="@+id/weatherpic"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/windspeedInfo"
        android:layout_width="192dp"
        android:textColor="#F4F6F7"
        android:layout_height="70dp"
        android:layout_toRightOf="@+id/windspeed"
        android:text="3m/s"
        android:textSize="24sp"
        android:gravity="center"
        android:textStyle="bold"
        android:typeface="monospace"
        android:layout_below="@+id/weatherpic"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/airpressureInfo"
        />
    <TextView
        android:id="@+id/airpressureInfo"
        android:layout_width="192dp"
        android:textColor="#F4F6F7"
        android:layout_height="70dp"
        android:layout_toRightOf="@+id/airpressure"
        android:text="666m/s"
        android:textSize="24sp"
        android:gravity="center"
        android:textStyle="bold"
        android:typeface="monospace"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/tideInfo"
        />
    <TextView
        android:id="@+id/airpressure"
        android:layout_width="155dp"
        android:layout_height="79dp"
        android:textColor="#F4F6F7"
        android:text="airpressure"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textSize="22sp"
        android:gravity="center"
        android:layout_below="@+id/windspeed"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tideInfo"
        android:layout_width="wrap_content"
        android:layout_height="52dp"
        android:textColor="#F4F6F7"
        android:gravity="center"
        android:text="tide Info"
        android:textStyle="bold"
        android:typeface="monospace"
        android:textSize="24sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/airpressure"
        android:layout_above="@+id/chart" />
    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart"
        android:layout_width="wrap_content"
        android:layout_height="180sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>